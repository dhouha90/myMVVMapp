<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="book"
            type="com.example.dchikhaoui.myprojectmvvm.Model.books"></variable>
        <variable
            name="detailBokkAdaptater"
            type="com.example.dchikhaoui.myprojectmvvm.Viewmodel.DetailBookViewModel"></variable>

    </data>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/book_img"
                android:layout_width="60dp"
                android:layout_height="100dp"
                app:imageURL="@{book.cover}" />

            <LinearLayout
                android:layout_width="257dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?android:selectableItemBackground"
                    android:fontFamily="sans-serif"
                    android:padding="20dp"
                    android:text="@{book.title}"
                    android:textColor="#a61818"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="46dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="@{book.getPriceBook()}"
                    android:textAlignment="viewEnd" />


                <TextView
                    android:id="@+id/count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:text="1"
                    android:textAlignment="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/plus"
                    android:onClick="@{() -> detailBokkAdaptater.increaseQuantityBook(book)}"

                    />

                <ImageButton
                    android:id="@+id/remove"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/remove"
                    android:onClick="@{() -> detailBokkAdaptater.decreaseQuantityBook(book)}"
                    />

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>